<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">

    <Button
        android:id="@+id/textViewUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_green"
        android:drawableTop="@drawable/thumbs_up"
        android:gravity="center"
        android:text="@string/voteup"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/textViewDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_red"
        android:drawableBottom="@drawable/thumbs_down"
        android:gravity="center"
        android:text="@string/votedown"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageView
        android:id="@+id/imageWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
      	android:background="@drawable/mobilization_soldier"
        android:gravity="bottom|center_horizontal"
     />
    
    <TextView
        android:id="@+id/textViewWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageWho"
        android:layout_centerHorizontal="true"
        android:text="Marek DefeciÅ„ski"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewPresentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWho"
        android:layout_centerHorizontal="true"
        android:text="BDD w androidzie"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />
        />

</RelativeLayout>