<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:drawableTop="@drawable/thumbs_up"
        android:gravity="center"
        android:text="VoteUp" />

    <TextView
        android:id="@+id/textViewDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:drawableBottom="@drawable/thumbs_down"
        android:gravity="center"
        android:text="VoteDown" />

    <Button
        android:id="@+id/textViewWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mobilization_soldier"
        android:gravity="bottom"
        android:text="Marek DefeciÅ„ski"
         />

</RelativeLayout>